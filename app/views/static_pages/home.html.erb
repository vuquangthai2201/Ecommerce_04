
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="first-slide container-fluid" src="https://static.decalgirl.com/assets/img/landing/laptopland-full-8.jpg" alt="First slide">
      <div class="container">
        <div class="carousel-caption text-left">
          <h1 class="text-dark"><%= t ".h1_text" %></h1>
          <div><%= link_to t(".signup_text"), signup_path, class:"btn btn-lg btn-primary" %></div>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <img class="second-slide container-fluid" src="https://www.techsignin.com/wp-content/uploads/2018/06/doanh-so-smartphone-toan-cau-tiep-da-giam.jpg" alt="Second slide">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="text-dark"><%= t ".h2_text" %></h1>
          <div><%= link_to t(".signup_text"), signup_path, class:"btn btn-lg btn-primary" %></div>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <img class="third-slide container-fluid" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQuaJxcTWdI5R4qBMQi1b8SNZZid6Ac_y6S4SqUWU9jIKZZL14rfA" alt="Third slide">
      <div class="container">
        <div class="carousel-caption text-right">
          <h1 class="text-dark"><%= t ".h3_text" %></h1>
          <div><%= link_to t(".signup_text"), signup_path, class:"btn btn-lg btn-primary" %></div>
        </div>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only"><%= t ".previous_text" %></span>
  </a>
  <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only"><%= t ".next_text" %></span>
  </a>
</div>
